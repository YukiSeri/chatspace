.side
  .sideUser
    %h2.sideUser__name
      = current_user.name
    %ul.sideUser__nav
      %li
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
      %li
        = link_to edit_user_path(current_user.id) do
          %i.fa.fa-cog
  .sideGroup
    - if @groups
      - @groups.each do |group|
        .sideGroup__box
          = link_to group_messages_path(group.id) do
            .sideGroup__boxName
              = group.name
            .sideGroup__boxMessage
              = group.message_last
